[*]
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.toml]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.{html,template,js,css}]
indent_style = space
indent_size = 2

[*.{json,xml}]
indent_style = space
indent_size = 2

[*.md]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.rst]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
